<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:layout_editor_absoluteX="-36dp"
        tools:layout_editor_absoluteY="0dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/backgroundImageView"
        app:layout_constraintTop_toTopOf="@+id/backgroundImageView">


    <EditText
        android:id="@+id/NameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_layout"
        android:textSize="20sp"
        android:padding="10dp"
        android:ems="10"
        android:hint="Enter your name"
        android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_layout">

            <com.hbb20.CountryCodePicker
                android:id="@+id/ccp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="6dp"
                app:ccpDialog_background="@drawable/edittext_layout"
                app:ccpDialog_cornerRadius="4dp"
                app:ccp_padding="0dp"
                app:ccp_showNameCode="false"
                app:ccp_textSize="20sp"/>

            <EditText
                android:id="@+id/emergencyContact1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_layout"
                android:hint="Emergency contact 1"
                android:inputType="phone"
                android:padding="10dp"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:background="@drawable/edittext_layout">

            <com.hbb20.CountryCodePicker
                android:id="@+id/ccp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:ccp_showNameCode="false"
                android:layout_marginStart="6dp"
                android:layout_gravity="center_vertical"
                app:ccpDialog_background="@drawable/edittext_layout"
                app:ccpDialog_cornerRadius="4dp"
                app:ccp_padding="0dp"
                app:ccp_textSize="20sp" />

            <EditText
                android:id="@+id/emergencyContact2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_layout"
                android:ems="10"
                android:hint="Emergency contact 2"
                android:inputType="phone"
                android:padding="10dp"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:background="@drawable/edittext_layout">

            <com.hbb20.CountryCodePicker
                android:id="@+id/ccp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:ccp_showNameCode="false"
                android:layout_marginStart="6dp"
                android:layout_gravity="center_vertical"
                app:ccpDialog_background="@drawable/edittext_layout"
                app:ccpDialog_cornerRadius="4dp"
                app:ccp_padding="0dp"
                app:ccp_textSize="20sp" />

            <EditText
                android:id="@+id/emergencyContact3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_layout"
                android:ems="10"
                android:hint="Emergency contact 3"
                android:inputType="phone"
                android:padding="10dp"
                android:textSize="20sp" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="6dp"
            android:textColor="@color/red"
            android:text="* Emergency contact 2 and 3 are optional fields"
            android:textSize="20sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/saveButton"
        android:backgroundTint="@color/black"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Save Details"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>